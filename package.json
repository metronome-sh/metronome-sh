{
  "name": "metronome-sh",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/metronome-sh/metronome-sh"
  },
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:react": "turbo dev --filter=@metronome-sh/react...",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "find . '(' -name \"node_modules\" -o -name \"build\" -o -name \"dist\" -o -name \".cache\" -o -name \".turbo\" ')' -type d -prune -exec rm -rf '{}' +",
    "react": "yarn workspace @metronome-sh/react",
    "runtime": "yarn workspace @metronome-sh/runtime"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "^1.10.6",
    "vitest": "^0.14.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.2"
  }
}
