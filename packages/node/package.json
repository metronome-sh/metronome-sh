{
  "name": "@metronome-sh/node",
  "version": "2.0.0",
  "description": "Metronome - Insights for Remix",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "concurrently \"npm:build:*\"",
    "build:typings": "tsc --declaration --emitDeclarationOnly -p ./tsconfig.json --outDir dist/",
    "build:rollup": "rollup -c",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:typings": "tsc --declaration --emitDeclarationOnly -p ./tsconfig.json --outDir dist/ --watch",
    "dev:rollup": "rollup -c --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "metronome",
    "remix",
    "analytics",
    "insights",
    "performance"
  ],
  "author": "Erick Tamayo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/metronome-sh/metronome-sh/issues"
  },
  "homepage": "https://github.com/metronome-sh/metronome-sh#readme",
  "dependencies": {
    "concurrently": "^7.1.0",
    "cuid": "^2.1.8",
    "dayjs": "^1.10.7",
    "device-detector-js": "^3.0.3",
    "hashids": "^2.2.10",
    "ts-invariant": "^0.9.4",
    "web-vitals": "^2.1.2",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@metronome-sh/config": "*",
    "@remix-run/dev": "^1.2.3",
    "@remix-run/node": ">=1.3.0",
    "@types/node": "^17.0.1",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "@remix-run/node": ">=1.3.0"
  }
}
